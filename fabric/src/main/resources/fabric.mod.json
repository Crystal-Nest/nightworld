{
  "schemaVersion": 1,
  "id": "${modid}",
  "version": "${mod_version}",
  "name": "${mod_title}",
  "description": "Explore a parallel world!",
  "authors": [
    "${author}"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/${modid_kebab}",
    "issues": "https://github.com/${github_user}/${modid_kebab}/issues",
    "sources": "https://github.com/${github_user}/${modid_kebab}/tree/${minecraft_version}"
  },
  "license": "GPL-3.0-or-later",
  "icon": "assets/${modid}/${modid_kebab}.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "${group}.${modid}.NightworldLoader"
    ]
  },
  "mixins": [
    "nightworld.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "java": ">=17"
  },
	"suggests": {
		"disable_custom_worlds_advice": "^3.0"
	}
}
